.row.border-bottom.mb-4.pb-2#optBtn
	.col-10.pt-2
		h5 #{Lang.order}: [#{object.code}]
	.col-2
		button.btn.btn-link(type="button") <span class="oi oi-chevron-bottom"></span>
.optBtn.text-center(style="display:none")
	.row.my-4
		.col-4
			a.btn.btn-warning.btn-block(href="/sfOrderCp/"+object._id) <span class="oi oi-aperture"></span> #{Lang.clone}
		.col-4
			button.btn.btn-link#noteLab(type="button") <span class="oi oi-tag"></span> #{Lang.note}
		.col-4
			a.btn.btn-warning.btn-block(href="/sfOrderUp/"+object._id) #{Lang.update}

.row
	if object.cter
		- cter = object.cter;
		.col-6
			h5 #{Lang.client}: 
				a.text-warning(href="/sfCter/"+cter._id) #{cter.nome}
		.col-6
			span #{Lang.tel}: #{cter.tel}
	else
		.col-4
			button.btn.btn-info.btn-block.clientAjax(type="button") #{Lang.client} <span class="oi oi-person"></span>
			button.btn.btn-info.btn-block.clientBtn(type="button", style="display:none") #{Lang.client} <span class="oi oi-person"></span>
		.col-8.clientInfo(style="display:none")
			form#formCters
				input#ajaxCters.form-control(type="text", autocomplete="off")
	.clientInfo(style="display:none")
		.row.ctersAjax.text-center
			.col-4
				a(href="/sfCterAdd?order="+object._id)
					div(class="card cancel m-2 bg-warning")
						.card-body
							.card-title #{Lang.newCl}
			.col-8
				div(class="card cancel m-2 bg-warning" id="client")
					//- img.card-img-top(src="..." alt="Card image cap")
					.card-body
						h5.card-title #{Lang.cancelCl}
		hr
		.row.cterAllAjax
div(style="height:20px")

script(src="/js/sfer/order/detail/clientAjax.js")