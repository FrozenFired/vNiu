extends ../aalayout/layout

block content
	.container.mt-3
		form#add(method="post", action="/bsSellNew", enctype="multipart/form-data")
			if orderId
				-a;
				input(type="hidden", name="obj[order]", value=orderId)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptCode") code
				.col-8.col-sm-6
					input#iptCode.form-control(type="text", name="obj[code]", value=code, autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptNome").text-info name
				.col-8.col-sm-6
					input#iptNome.form-control(type="text", name="obj[nome]", autocomplete="off")
				.col-4.d-block.d-sm-none
				.col-8.col-sm-4
					span#optName(style="display:none").text-danger optName
			hr
			.form-group.row
				.offset-sm-2.col-sm-6
					input.btn.btn-info.btn-block(type="submit" value='Add')
	script(src="/js/bser/customer/add.js")