a.btn.btn-warning(href="#", data-toggle="modal", data-target="#upInfo") <span class="oi oi-pencil"></span>

#upInfo.modal.fade
	.modal-dialog
		.modal-content
			form#upGroup(method="post", action=thisAct+"Upd", enctype="multipart/form-data")
				.modal-header
					h5 #{Lang.setting} :
					h5.text-right [#{object.code}]
				.modal-body
					input(type="hidden", name="obj[_id]", value=object._id)
					.form-group.row
						label.col-3.col-xs-2.col-form-label(for="iptTel") #{Lang.tel}
						.col-9.col-xs-6
							input#iptTel.form-control(type="text", name="obj[tel]", value=object.tel)
						.col-3
						.col-9.col-xs-4#optTel.text-danger(style="display:none") 请输入公司电话(长度大于5)
					.form-group.row
						label.col-3.col-xs-2.col-form-label(for="iptResp") #{Lang.resp}
						.col-9.col-xs-6
							input#iptResp.form-control(type="text", name="obj[resp]", value=object.resp)
						.col-3
						.col-9.col-xs-4#optResp.text-danger(style="display:none") 请输入公司负责人(长度大于2)
					.form-group.row
						label.col-3.col-xs-2.col-form-label(for="iptIva") #{Lang.iva}
						.col-9.col-xs-6
							input#iptIva.form-control(type="text", name="obj[iva]", value=object.iva)
